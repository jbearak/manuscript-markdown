      },
      {
        "command": "mdmarkup.formatHighlight_pink",
        "title": "Pink"
      },
      {
        "command": "mdmarkup.formatHighlight_blue",
        "title": "Blue"
      },
      {
        "command": "mdmarkup.formatHighlight_red",
        "title": "Red"
      },
      {
        "command": "mdmarkup.formatHighlight_dark-blue",
        "title": "Dark Blue"
      },
      {
        "command": "mdmarkup.formatHighlight_teal",
        "title": "Teal"
      },
      {
        "command": "mdmarkup.formatHighlight_violet",
        "title": "Violet"
      },
      {
        "command": "mdmarkup.formatHighlight_dark-red",
        "title": "Dark Red"
      },
      {
        "command": "mdmarkup.formatHighlight_dark-yellow",
        "title": "Dark Yellow"
      },
      {
        "command": "mdmarkup.formatHighlight_gray-50",
        "title": "Gray 50%"
      },
      {
        "command": "mdmarkup.formatHighlight_gray-25",
        "title": "Gray 25%"
      },
      {
        "command": "mdmarkup.formatHighlight_black",
        "title": "Black"
      }
    ],
    "submenus": [
      {
        "id": "markdown.annotations",
        "label": "Markdown Annotations",
        "icon": "$(comment-discussion)"
      },
      {
        "id": "markdown.formatting",
        "label": "Markdown Formatting",
        "icon": "$(edit)"
      },
      {
        "id": "markdown.heading",
        "label": "Heading"
      },
      {
        "id": "markdown.highlightColor",
        "label": "Highlight Color"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "submenu": "markdown.formatting",
          "when": "editorLangId == markdown && !isInDiffEditor",
          "group": "navigation@1"
        },
        {
          "submenu": "markdown.annotations",
          "when": "editorLangId == markdown && !isInDiffEditor",
          "group": "navigation@2"
        }
      ],
      "editor/context": [
        {
          "submenu": "markdown.annotations",
          "when": "editorLangId == markdown",
          "group": "9_markdown@1"
        },
        {
          "submenu": "markdown.formatting",
          "when": "editorLangId == markdown",
          "group": "9_markdown@2"
        }
      ],
      "markdown.annotations": [
        {
          "command": "mdmarkup.highlightAndComment",
          "when": "editorLangId == markdown",
          "group": "1_mdmarkup@1"
        },
        {
          "command": "mdmarkup.additionAndComment",
          "when": "editorLangId == markdown",
          "group": "1_mdmarkup@2"
        },
        {
          "command": "mdmarkup.deletionAndComment",
          "when": "editorLangId == markdown",
          "group": "1_mdmarkup@3"
        },
        {
          "command": "mdmarkup.substituteAndComment",
          "when": "editorLangId == markdown",
          "group": "1_mdmarkup@4"
        },
        {
          "command": "mdmarkup.highlight",
          "when": "editorLangId == markdown",
          "group": "2_mdmarkup@1"
        },
        {
          "command": "mdmarkup.markAddition",
          "when": "editorLangId == markdown",
          "group": "2_mdmarkup@2"
        },
        {
          "command": "mdmarkup.markDeletion",
          "when": "editorLangId == markdown",
          "group": "2_mdmarkup@3"
        },
        {
          "command": "mdmarkup.markSubstitution",
          "when": "editorLangId == markdown",
          "group": "2_mdmarkup@4"
        },
        {
          "command": "mdmarkup.prevChange",
          "when": "editorLangId == markdown",
          "group": "3_navigation@1"
        },
        {
          "command": "mdmarkup.nextChange",
          "when": "editorLangId == markdown",
          "group": "3_navigation@2"
        }
      ],
      "markdown.formatting": [
        {
          "command": "mdmarkup.formatBold",
          "when": "editorLangId == markdown",
          "group": "1_format@1"
        },
        {
          "command": "mdmarkup.formatItalic",
          "when": "editorLangId == markdown",
          "group": "1_format@2"
        },
        {
          "command": "mdmarkup.formatBoldItalic",
          "when": "editorLangId == markdown",
          "group": "1_format@3"
        },
        {
          "command": "mdmarkup.formatStrikethrough",
          "when": "editorLangId == markdown",
          "group": "1_format@4"
        },
        {
          "command": "mdmarkup.formatUnderline",
          "when": "editorLangId == markdown",
          "group": "1_format@5"
        },
        {
          "command": "mdmarkup.formatHighlight",
          "when": "editorLangId == markdown",
          "group": "1a_highlight@1"
        },
        {
          "submenu": "markdown.highlightColor",
          "when": "editorLangId == markdown",
          "group": "1a_highlight@2"
        },
        {
          "command": "mdmarkup.formatInlineCode",
          "when": "editorLangId == markdown",
          "group": "1_format@7"
        },
        {
          "command": "mdmarkup.formatCodeBlock",
          "when": "editorLangId == markdown",
          "group": "1_format@8"
        },
        {
          "command": "mdmarkup.formatLink",
          "when": "editorLangId == markdown",
          "group": "1_format@9"
        },
        {
          "command": "mdmarkup.formatBulletedList",
          "when": "editorLangId == markdown",
          "group": "2_lists@1"
        },
        {
          "command": "mdmarkup.formatNumberedList",
          "when": "editorLangId == markdown",
          "group": "2_lists@2"
        },
        {
          "command": "mdmarkup.formatTaskList",
          "when": "editorLangId == markdown",
          "group": "2_lists@3"
        },
        {
          "command": "mdmarkup.formatQuoteBlock",
          "when": "editorLangId == markdown",
          "group": "2_lists@4"
        },
        {
          "command": "mdmarkup.reflowTable",
          "when": "editorLangId == markdown",
          "group": "2_tables@5"
        },
        {
          "submenu": "markdown.heading",
          "when": "editorLangId == markdown",
          "group": "3_heading@1"
        }
      ],
      "markdown.heading": [
        {
          "command": "mdmarkup.formatHeading1",
          "when": "editorLangId == markdown",
          "group": "1_heading@1"
        },
        {
          "command": "mdmarkup.formatHeading2",
          "when": "editorLangId == markdown",
          "group": "1_heading@2"
        },
        {
          "command": "mdmarkup.formatHeading3",
          "when": "editorLangId == markdown",
          "group": "1_heading@3"
        },
        {
          "command": "mdmarkup.formatHeading4",
          "when": "editorLangId == markdown",
          "group": "1_heading@4"
        },
        {
          "command": "mdmarkup.formatHeading5",
          "when": "editorLangId == markdown",
          "group": "1_heading@5"
        },
        {
          "command": "mdmarkup.formatHeading6",
          "when": "editorLangId == markdown",
          "group": "1_heading@6"
        }
      ],
      "markdown.highlightColor": [
        { "command": "mdmarkup.formatHighlight_yellow", "when": "editorLangId == markdown", "group": "1_color@1" },
        { "command": "mdmarkup.formatHighlight_green", "when": "editorLangId == markdown", "group": "1_color@2" },
        { "command": "mdmarkup.formatHighlight_turquoise", "when": "editorLangId == markdown", "group": "1_color@3" },
        { "command": "mdmarkup.formatHighlight_pink", "when": "editorLangId == markdown", "group": "1_color@4" },
        { "command": "mdmarkup.formatHighlight_blue", "when": "editorLangId == markdown", "group": "1_color@5" },
        { "command": "mdmarkup.formatHighlight_red", "when": "editorLangId == markdown", "group": "1_color@6" },
        { "command": "mdmarkup.formatHighlight_dark-blue", "when": "editorLangId == markdown", "group": "2_color@1" },
        { "command": "mdmarkup.formatHighlight_teal", "when": "editorLangId == markdown", "group": "2_color@2" },
        { "command": "mdmarkup.formatHighlight_violet", "when": "editorLangId == markdown", "group": "2_color@3" },
        { "command": "mdmarkup.formatHighlight_dark-red", "when": "editorLangId == markdown", "group": "2_color@4" },
        { "command": "mdmarkup.formatHighlight_dark-yellow", "when": "editorLangId == markdown", "group": "2_color@5" },
        { "command": "mdmarkup.formatHighlight_gray-50", "when": "editorLangId == markdown", "group": "3_color@1" },
        { "command": "mdmarkup.formatHighlight_gray-25", "when": "editorLangId == markdown", "group": "3_color@2" },
        { "command": "mdmarkup.formatHighlight_black", "when": "editorLangId == markdown", "group": "3_color@3" }
      ],
      "explorer/context": [
        {
          "command": "mdmarkup.convertDocx",
          "when": "resourceExtname == .docx",
          "group": "9_export"
        }
      ]
    },
    "keybindings": [
      {
        "command": "mdmarkup.nextChange",
        "key": "alt+shift+j",
        "when": "editorTextFocus && editorLangId == markdown"
      },
      {
        "command": "mdmarkup.prevChange",
        "key": "alt+shift+k",
        "when": "editorTextFocus && editorLangId == markdown"
      }
    ],
    "snippets": [
      {
        "language": "markdown",
        "path": "./snippets.json"
      }
    ],
    "grammars": [
      {
        "path": "./syntaxes/mdmarkup.json",
        "scopeName": "mdmarkup.injection",
        "injectTo": [
          "text.html.markdown"
        ]
      }
    ],
    "markdown.previewStyles": [
      "./media/mdmarkup.css"
    ],
    "markdown.markdownItPlugins": true,
    "configuration": {
      "title": "Markdown Annotations",
      "properties": {
        "mdmarkup.includeAuthorNameInComments": {
          "type": "boolean",
          "default": true,
          "description": "Include author name in comment attribution"
        },
        "mdmarkup.authorName": {
          "type": "string",
          "default": "",
          "description": "Author name to use in comments (leave empty to use OS username)"
        },
        "mdmarkup.includeTimestampInComments": {
          "type": "boolean",
          "default": true,
          "description": "Include timestamp in comment author attribution (format: username (yyyy-mm-dd hh:mm))"
        },
        "mdmarkup.defaultHighlightColor": {
          "type": "string",
          "enum": ["yellow", "green", "turquoise", "pink", "blue", "red", "dark-blue", "teal", "violet", "dark-red", "dark-yellow", "gray-50", "gray-25", "black"],
          "default": "yellow",
          "description": "Default background color for ==highlight== formatting when no color is specified"
        },
        "mdmarkup.citationKeyFormat": {
          "type": "string",
          "enum": [
            "authorYearTitle",
            "authorYear",
            "numeric"
          ],
          "default": "authorYearTitle",
          "enumDescriptions": [
            "Author surname + year + first title word (e.g., smith2020effects)",
            "Author surname + year (e.g., smith2020)",
            "Sequential numbers (e.g., 1, 2, 3)"
          ],
          "description": "Citation key format for DOCX to Markdown conversion"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "clean": "rm -rf out/",
    "rebuild": "bun run clean && bun run compile",
    "package": "bun run rebuild && bunx vsce package",
    "install-local": "bun run package && code --install-extension mdmarkup-$(node -p \"require('./package.json').version\").vsix --force"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^2.2.42",
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.103.2",
    "fast-check": "^4.3.0",
    "tslint": "^5.14.0",
    "typescript": "^5.9.3"
  },
  "private": true,
  "dependencies": {
    "fast-xml-parser": "^5.3.5",
    "jszip": "^3.10.1",
    "markdown-it": "^14.1.0"
  }
}
