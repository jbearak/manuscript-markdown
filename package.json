{
  "name": "mdmarkup",
  "displayName": "Markdown Annotations and Formatting",
  "description": "Markdown formatting and CriticMarkup annotations tools",
  "version": "0.9.3",
  "engines": {
    "vscode": "^1.103.2"
  },
  "categories": [
    "Formatters",
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "markdown",
    "mdmarkup",
    "critic markup",
    "annotations",
    "formatting",
    "markdown formatting"
  ],
  "publisher": "jbearak",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/jbearak/mdmarkup/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jbearak/mdmarkup.git"
  },
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
